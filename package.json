{
  "name": "holodex",
  "version": "1.0.0",
  "description": "Holochain application indexing engine for distributed apps which run on holochains",
  "scripts": {
    "test": "npm run build && hcdev test",
    "build-holodex-js": "rollup -c && babel dna-tmp/holodex.js -o dna/holodex/holodex.js",
    "build": "npm run build-holodex-js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HC-Interns/holodex.git"
  },
  "author": "Holo Interns 2018",
  "license": "GPL3",
  "bugs": {
    "url": "https://github.com/HC-Interns/holodex/issues"
  },
  "homepage": "https://github.com/HC-Interns/holodex#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "rollup": "^0.62.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "standard": "^11.0.1"
  },
  "standard": {
    "ignore": [
      "dna",
      "dna-tmp"
    ],
    "global": [
      "HC",
      "App",
      "property",
      "debug",
      "makeHash",
      "getBridges",
      "sign",
      "verifySignature",
      "send",
      "call",
      "bridge",
      "commit",
      "migrate",
      "query",
      "get",
      "update",
      "updateAgent",
      "remove",
      "getLinks",
      "bundleStart",
      "bundleClose"
    ]
  }
}
